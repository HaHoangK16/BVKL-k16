@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = "WebbaseTemplate.cshtml";
}

@* the fun starts here *@



<section id="main">
    <div class="inner">
        <header class="major special">
            <p>@Umbraco.AssignedContentItem.Value("Id")</p>
            <h1>@Umbraco.AssignedContentItem.Value("newsTitle")</h1>
            <p>
                @Umbraco.AssignedContentItem.Value("publicDate")
            </p>
        </header>
        <a href="#" class="image fit"><img src="images/pic11.jpg" alt="" /></a>
        <p>
            @Umbraco.AssignedContentItem.Value("newsBodyText")
        </p>
    </div>
</section>



<div class="container">
    @{Html.RenderAction("RenderComment", "Comments"); }
    <form method="post">
        @if (TempData["CommentsUsSuccess"] != null && (bool)TempData["CommentsUsSuccess"])
        {
            <h2 class="text-center">Thank you for your comment.</h2>
        }

    </form>
</div>

@{
    IPublishedContent CurrentPage = Model;
    var CommentsList = CurrentPage.Children();
}
<div class="row">
    <div class="col-md-1"></div>

    <div class="col-md-10">
        @{

            foreach (var comment in CommentsList)
            {
                <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

                <div class="container">


                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid" />
                                    <p class="text-secondary text-center">15 Minutes Ago</p>
                                </div>
                                <div class="col-md-10">
                                    <p>
                                        <a class="float-left" href="https://maniruzzaman-akash.blogspot.com/p/contact.html"><strong>@comment.Value("commentName")</strong></a>
                                        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                                        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                                        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                                        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                                        <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                                    </p>
                                    <div class="clearfix"></div>
                                    <p>@comment.Value("commentMessage")</p>
                                    <p>
                                        <a class="float-right btn btn-outline-primary ml-2"> <i class="fa fa-reply"></i> Reply</a>
                                        <a class="float-right btn text-white btn-danger"> <i class="fa fa-heart"></i> Like</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>


    <div class="col-md-1"></div>
</div>



